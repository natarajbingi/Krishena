<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newReportModel"
            type="com.krishe.govern.views.newReport.NewReportViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.newReport.NewReportActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#DFE6ED"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/header_title1"
                style="@style/header_title_text"
                android:text="Add new Implement Report"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/implementName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Implement Name"
                android:textColor="@color/headerText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/header_title1"
                app:layout_constraintTop_toBottomOf="@+id/header_title1" />

            <TextView
                android:id="@+id/implementType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Implement Type"
                android:textColor="@color/headerText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/implementName"
                app:layout_constraintTop_toBottomOf="@+id/implementName" />

            <TextView
                android:id="@+id/ownerShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Ownership"
                android:textColor="@color/headerText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_title1" />

            <TextView
                android:id="@+id/implementId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Implement ID"
                android:textColor="@color/headerText"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ownerShip"
                app:layout_constraintTop_toBottomOf="@+id/ownerShip" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="@+id/header_title"
            app:layout_constraintStart_toStartOf="@+id/header_title"
            app:layout_constraintTop_toBottomOf="@+id/header_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Step-1 & 3 handling in RecyclerView-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stepOneImagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/imgae_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/ifShowStepOneImagesLayout"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgAddView"
                        android:layout_width="205dp"
                        android:layout_height="205dp"
                        android:src="@drawable/ic_other_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Other"
                        android:textColor="@color/radioOn"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Step-2 handling in stepTwoImagesLayout-->
                <LinearLayout
                    android:id="@+id/stepTwoImagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/monthlyMainRepoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="How do you define Implement Condition? *"
                            android:textColor="@color/headerText"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/header_title" />

                        <RadioGroup
                            android:id="@+id/currentImplementStatusGrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <RadioButton
                                android:id="@+id/radioButton1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Implement is Perfectly OKAY" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Implement is Okay BUT schedule service is due" />

                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Implement is Okay BUT requires minor repairs" />

                            <RadioButton
                                android:id="@+id/radioButton4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Implement is NOT Okay – Breakdown – Major repairs &amp; parts are needed" />

                            <RadioButton
                                android:id="@+id/radioButton5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Implement is NOT Okay – Can be scrapped" />

                            <RadioButton
                                android:id="@+id/radioButton6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Other" />

                        </RadioGroup>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:text="Additional Report \nComments"
                            android:textColor="@color/headerText"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/header_title" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportCommentsEditext"
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_background"
                            android:gravity="start"
                            android:hint="Other Report Comments"
                            android:padding="10dp" />

                        <ImageView
                            android:id="@+id/testImg"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/qrimg"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preSeasonalRepoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textpreSeasonal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="Is Implement's Schedule Service done? *"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/header_title" />

                        <RadioGroup
                            android:id="@+id/preSeasonalServiceGrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <RadioButton
                                android:id="@+id/radiopreSeasonalServiceButton1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/radiopreSeasonalServiceButton2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No" />

                            <RadioButton
                                android:id="@+id/radiopreSeasonalServiceButton3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Other" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/preSeasonalServiceComment"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_background"
                            android:gravity="start"
                            android:hint="Other Comments"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/textpreReadiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="Is Implement's 'Pre-Seasonal readiness' done for upcoming season? *"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/header_title" />

                        <RadioGroup
                            android:id="@+id/preSeasonalReadinessGrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <RadioButton
                                android:id="@+id/radiopreSeasonalReadinessButton1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/radiopreSeasonalReadinessButton2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No" />

                            <RadioButton
                                android:id="@+id/radiopreSeasonalReadinessButton3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Other" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/preSeasonalReadinessComment"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_background"
                            android:gravity="start"
                            android:hint="Other Comments"
                            android:padding="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BreakdownRepoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textBreakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:padding="10dp"
                            android:text="Please select the nature of Breakdown *"
                            android:textColor="@color/headerText"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/header_title" />

                        <RadioGroup
                            android:id="@+id/BreakdownGrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <RadioButton
                                android:id="@+id/radioBreakdownButton1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Minor – Can be resolved in field by local technicians in 0 to 1 day" />

                            <RadioButton
                                android:id="@+id/radioBreakdownButton2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Moderate – Can be resolved by the dealer service team in 0 to 2 days" />

                            <RadioButton
                                android:id="@+id/radioBreakdownButton3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Major – Immediate intervention of M&amp;M team is needed" />

                            <RadioButton
                                android:id="@+id/radioBreakdownButton4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Other" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportBreakdownEditext"
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_background"
                            android:gravity="start"
                            android:hint="Other Comments"
                            android:padding="10dp" />
                    </LinearLayout>

                </LinearLayout>

               <LinearLayout
                   android:id="@+id/decisionButtonsLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/backButton"
                       style="@style/borderButton"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_margin="15dp"
                       android:layout_weight="1"
                       android:text="Back" />

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/forwardDecisionButton"
                       style="@style/SubmitButton"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_margin="15dp"
                       android:layout_weight="1"
                       android:text="Add Details" />
               </LinearLayout>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>

   </LinearLayout>
</layout>